<h3>Books!</h3>

<div class='home index'>
    <%= link_to("Add New Book", {controller: :home, action: :new}, :class => 'action new') %>

    <br>
    <br>
    
    <table class="listing" summary="book list">
    <tr class="header">
      <%# <th>#</th> %>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.author%></td>
      <td><%= book.genre%></td>
      <td>$ <%= book.price.to_s%></td>
      <td><%= book.published_date%></td>
      <td class="actions">
        <%= link_to("Read", {action: :read, id: book.id}, :class => 'action read') %>
        <%# <%= link_to("Show", subj_test_path(subject.id), :class => 'action show') %>
        <%= link_to("Edit", {action: :update, id: book.id}, :class => 'action edit') %>
        <%= link_to("Delete", {action: :delete, id: book.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
